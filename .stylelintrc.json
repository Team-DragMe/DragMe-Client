{
  "extends": [
    "stylelint-config-prettier",
    "stylelint-config-styled-components",
    "postcss-syntax",
    "postcss-html"
  ],
  "overrides": [
    {
      "files": ["**/*.@(ts|tsx)"],
      "customSyntax": "@stylelint/postcss-css-in-js"
    },
    {
      "files": ["*.html", "**/*.html"],
      "customSyntax": "postcss-html"
    }
  ]
}
